<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="12dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="12dp">
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="17sp"
        android:textColor="?attr/colorTextTitle"
        android:gravity="center_vertical"
        android:id="@+id/topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/time_column"
        android:fontFamily="@font/basefont_semibold"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/status_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/topic"
        android:layout_marginVertical="6dp">
        <com.google.android.material.chip.Chip
            android:textSize="10sp"
            android:textColor="@color/red_800"
            android:layout_gravity="center_horizontal"
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="#ffcccb"
            app:chipMinHeight="18dp"
            app:chipMinTouchTargetSize="0dp"
            app:textEndPadding="4sp"
            app:textStartPadding="5sp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="13sp"
            android:textColor="@color/grey_850"
            android:gravity="center_vertical"
            android:id="@+id/title"
            android:paddingLeft="6dp"
            android:paddingBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="14sp"
        android:textColor="@color/googleDark"
        android:ellipsize="end"
        android:id="@+id/message"
        android:paddingBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_below="@+id/status_row"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lastMessage_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/message">
        <View
            android:background="#5b85aa"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="13sp"
            android:textColor="@color/grey_600"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/lastMessage"
            android:paddingLeft="8dp"
            android:paddingBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/time_column"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="13sp"
            android:textColor="@color/grey_600"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@color/grey_200"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/lastMessage_row"/>
</RelativeLayout>
