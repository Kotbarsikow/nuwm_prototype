<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/content_scrollable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="@style/BaseTextAppearance.Title"
        android:textSize="22sp"
        android:ellipsize="end"
        android:id="@+id/name"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:maxLines="2"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"
        android:paddingVertical="4dp"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Regular.Small"
        android:textSize="14sp"
        android:textColor="?attr/colorTextSub"
        android:id="@+id/consists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginBottom="14dp"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"/>
    <View
        android:background="@color/grey_100"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/grey_100"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Bold"
            android:textSize="18sp"
            android:textColor="?attr/colorTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_large"
            android:layout_marginTop="14dp"
            android:layout_marginRight="@dimen/horizontal_margin_large"
            android:layout_marginBottom="14dp"
            android:text="Групи"
            android:layout_marginHorizontal="@dimen/horizontal_margin_large"
            android:layout_marginVertical="14dp"/>
    </LinearLayout>
    <View
        android:background="@color/grey_100"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/grey_100"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Bold"
            android:textSize="18sp"
            android:textColor="?attr/colorTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_large"
            android:layout_marginTop="14dp"
            android:layout_marginRight="@dimen/horizontal_margin_large"
            android:text="Студенти"
            android:layout_marginHorizontal="@dimen/horizontal_margin_large"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular.Small"
            android:textSize="14sp"
            android:textColor="?attr/colorTextSub"
            android:id="@+id/students_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_large"
            android:layout_marginTop="6dp"
            android:layout_marginRight="@dimen/horizontal_margin_large"
            android:layout_marginBottom="6dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin_large"
            android:layout_marginVertical="6dp"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Bold"
            android:textColor="?attr/colorAccent"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Переглянути список студентів"
            android:onClick="onClickShowStudents"/>
    </LinearLayout>
    <include layout="@layout/profile_item_timetable"/>
</LinearLayout>
