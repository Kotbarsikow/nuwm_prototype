<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintContentActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/trans_white"
        android:gravity="center"
        android:id="@+id/appCompatTextView"
        android:background="@color/colorAccent"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="ЕКСПЕРИМЕНТАЛЬНІ ДОСЛІДЖЕННЯ ПАРАМЕТРІВ ЕЛЕКТРОМАГНІТНИХ ФІЛЬТРІВ"
        android:breakStrategy="high_quality"
        android:paddingVertical="14dp"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/imageCard"
        app:layout_constraintEnd_toEndOf="@+id/imageCard"
        app:layout_constraintStart_toStartOf="@+id/imageCard"
        app:layout_constraintTop_toTopOf="@+id/imageCard"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageCard"
        android:layout_width="95dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/grey_75"
        app:strokeWidth="1px">
        <ImageView
            android:id="@+id/imageView4"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </com.google.android.material.card.MaterialCardView>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="?attr/colorTextTitle"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Методичні вказівки до виконання лабораторних робіт №8-9 з навчальної дисципліни “Інформатика та комп’ютерна техніка” для студентів спеціальностей: 151 “Автоматизація та комп’ютерно-інтегровані технології”, 141 “Електроенергетика, електротехніка "
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:breakStrategy="high_quality"
        android:hyphenationFrequency="none"
        android:textFontWeight="400"
        app:fontFamily="@font/basefont_semibold"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageCard"
        app:layout_constraintTop_toTopOf="@+id/imageCard"
        app:layout_constraintVertical_bias="0"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/creators"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guidelineA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.33"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guidelineB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.66"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="imageCard,creators"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/view2"
        android:background="?attr/colorBackgroundSub"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:alpha="0.86"
        app:layout_constraintEnd_toStartOf="@+id/guidelineA"
        app:layout_constraintTop_toBottomOf="@+id/barrier"/>
    <View
        android:id="@+id/view3"
        android:background="?attr/colorBackgroundSub"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:alpha="0.86"
        app:layout_constraintEnd_toStartOf="@+id/guidelineB"
        app:layout_constraintTop_toBottomOf="@+id/barrier"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2">
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Bold"
            android:textSize="18sp"
            android:textColor="?attr/colorTextSub"
            android:id="@+id/loadCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.01"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/colorTextSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Завантажень"
            android:layout_below="@+id/loadCounter"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/view3"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2">
        <ImageView
            android:id="@+id/typeFileImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_pdf"
            app:tint="?attr/colorTextSub"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/colorTextSub"
            android:id="@+id/typeFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Документ PDF"
            android:layout_below="@+id/loadCounter"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineB"
        app:layout_constraintTop_toTopOf="@+id/view3">
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Bold"
            android:textSize="18sp"
            android:textColor="?attr/colorTextSub"
            android:id="@+id/fileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.01"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/colorTextSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Розмір файлу"
            android:layout_below="@+id/loadCounter"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/downloading"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/downloadButton">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/grey_650"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Завантаження...."/>
        <ProgressBar
            android:id="@+id/progress_horizontal"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/downloadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="Завантажити"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/openFile"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="Відкрити"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        style="@style/Widget.MaterialComponents.Button"/>
    <View
        android:id="@+id/view8"
        android:background="?attr/colorBackgroundSub"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:alpha="0.86"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/downloadButton"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textSize="18sp"
        android:textColor="?attr/colorTextTitle"
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:text="Про цей документ"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view8"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/colorTextMain"
        android:id="@+id/abstracts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:lineSpacingMultiplier="1.2"
        android:alpha="0.7"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <View
        android:id="@+id/view9"
        android:background="?attr/colorBackgroundSub"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:alpha="0.86"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/abstracts"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout7"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view9">
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Bold"
            android:textColor="?attr/colorTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Шифр"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/colorTextMain"
            android:id="@+id/shufr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Bold"
            android:textColor="?attr/colorTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Рік"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/colorTextMain"
            android:id="@+id/date_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Bold"
            android:textColor="?attr/colorTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ключові слова"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/colorTextMain"
            android:id="@+id/keywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"/>
    </LinearLayout>
    <View
        android:id="@+id/view11"
        android:background="?attr/colorBackgroundSub"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:alpha="0.86"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textColor="?attr/colorTextTitle"
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Фрагменти з документу"
        app:layout_constraintStart_toStartOf="@+id/view11"
        app:layout_constraintTop_toBottomOf="@+id/view11"/>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/images"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:paddingStart="16dp"
        android:layout_marginVertical="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/preview_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="images,textView7,view11"/>
</androidx.constraintlayout.widget.ConstraintLayout>
