<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/layout_auth_init"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imv_logo_on_auth_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:maxHeight="160dp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_leo"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Bold.Large"
                android:textSize="38sp"
                android:textColor="@color/dark"
                android:gravity="center"
                android:id="@+id/txv_appname_on_auth_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:layout_below="@+id/imv_logo_on_auth_screen"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/ftr"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/button_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginRight="32dp"
                android:layout_below="@+id/txv_appname_on_auth_screen">
                <com.developer.gbuttons.GoogleSignInButton
                    android:id="@+id/auth_sign_in_button"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="@string/signin_by_google"
                    android:layout_alignLeft="@+id/button2"
                    android:layout_alignRight="@+id/button2"
                    android:layout_centerInParent="true"
                    app:isDarkTheme="true"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_gravity="center"
                    android:id="@+id/button2"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="-1dp"
                    android:text="@string/no_email"
                    android:singleLine="true"
                    android:layout_below="@+id/auth_sign_in_button"
                    android:onClick="onSignSkip"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:strokeColor="@color/colorPrimaryMaterial"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_gravity="center"
                    android:id="@+id/calc"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Калькулятор ЗНО"
                    android:singleLine="true"
                    android:layout_below="@+id/button2"
                    android:layout_alignLeft="@+id/button2"
                    android:layout_alignRight="@+id/button2"
                    android:onClick="onSignCalc"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:strokeColor="@color/colorPrimaryMaterial"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="invisible"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_below="@+id/txv_appname_on_auth_screen"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleLarge"/>
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grey_500"
        android:gravity="center"
        android:id="@+id/app_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-light"/>
</RelativeLayout>
