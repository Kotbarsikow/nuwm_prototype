<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/repository_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="?attr/colorBackgroundSub"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:alpha="0.66"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textSize="18sp"
        android:textColor="?attr/colorTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="14dp"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginBottom="14dp"
        android:text="Репозиторій"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"
        android:layout_marginVertical="14dp"/>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/download_chart"
        android:paddingRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="128dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_large"
            android:layout_marginRight="@dimen/horizontal_margin_large"
            android:layout_marginHorizontal="@dimen/horizontal_margin_large">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_download"
                app:tint="?attr/colorTextSub"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/colorTextSub"
                android:id="@+id/downloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="500+ завантажень"
                android:layout_below="@+id/loadCounter"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_large"
            android:layout_marginRight="@dimen/horizontal_margin_large"
            android:layout_marginHorizontal="@dimen/horizontal_margin_large">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_books"
                app:tint="?attr/colorTextSub"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/colorTextSub"
                android:id="@+id/doc_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="147 документів"
                android:layout_below="@+id/loadCounter"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textSize="16sp"
        android:textColor="?attr/colorTextMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="@dimen/horizontal_margin_large"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginBottom="4dp"
        android:text="Найпопулярніше"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLibrary"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textColor="?attr/colorAccent"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Більше літератури цього автора"
        android:onClick="onShowMoreRepository"/>
</LinearLayout>
