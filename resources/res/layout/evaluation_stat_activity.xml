<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Regular"
        android:textSize="18sp"
        android:textColor="?attr/colorTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="Ваша успішність"/>
    <TableLayout
        android:id="@+id/main_table"
        android:background="?attr/colorBackground"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:stretchColumns="0,*">
        <TableRow
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="Середній бал студента за весь період"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/str_avr"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:maxWidth="30dp"
                android:text="75"/>
        </TableRow>
        <TableRow
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="Розподіл оцінок за:"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="               національною шкалою"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="90dp"
                android:layout_column="1"
                android:text="відмінно "/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="0 %"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="добре"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="0 %"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="задовільно "/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="0 %"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="               шкалою ECTS"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="A "/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="0 %"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="B "/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="0 %"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="C "/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="0 %"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="D "/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="0 %"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="E "/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="0 %"/>
        </TableRow>
    </TableLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular"
            android:textSize="15sp"
            android:textColor="?attr/colorTextMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_span="2"
            android:text="Середній бал студента за весь період"
            android:layout_toLeftOf="@+id/str_main_avr"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular"
            android:textSize="15sp"
            android:textColor="?attr/colorTextMain"
            android:id="@+id/str_main_avr"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxWidth="30dp"
            android:maxLength="5"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Regular"
        android:textSize="@dimen/textVeryLargest"
        android:textColor="?attr/colorTextMain"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginTop="26dp"
        android:text="Розподіл оцінок за шкалою ECTS"/>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Regular"
        android:textSize="@dimen/textVeryLargest"
        android:textColor="?attr/colorTextMain"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Рейтинг вашої групи"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/textNormal"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryMaterialDark"
            android:id="@+id/click_all_time"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="За весь час"
            android:onClick="onClickAllTime"
            android:paddingVertical="3dp"/>
        <TextView
            android:textSize="@dimen/textNormal"
            android:textColor="?attr/colorTextMain"
            android:id="@+id/click_current_half"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поточний семестр"
            android:onClick="onClickCurrent"
            android:paddingVertical="3dp"/>
    </LinearLayout>
    <com.m_myr.nuwm.nuwmschedule.ui.view.barview.BarChart
        android:id="@+id/group_chart"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="6dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp">
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular"
            android:textSize="@dimen/textVeryLargest"
            android:textColor="?attr/colorTextMain"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Загальний рейтинг"/>
    </FrameLayout>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Light.Small"
        android:textSize="10sp"
        android:textColor="?attr/colorTextSub"
        android:gravity="center_horizontal"
        android:id="@+id/globalRateSubtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*за весь період навчання"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/globalRateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular"
            android:textSize="@dimen/textNormal"
            android:textColor="@color/colorPrimaryMaterialDark"
            android:id="@+id/textRate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ви успішніші "/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular"
            android:textSize="23sp"
            android:textColor="@color/colorPrimaryMaterialDark"
            android:gravity="center_horizontal"
            android:id="@+id/rate_in_global"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular"
            android:textSize="@dimen/textNormal"
            android:textColor="@color/colorPrimaryMaterialDark"
            android:id="@+id/textRate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="% студентів"/>
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_in_univer"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="140dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/textNormal"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryMaterialDark"
                android:id="@+id/click_global"
                android:background="?attr/selectableItemBackground"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Глобальний"
                android:onClick="onClickGlobal"
                android:paddingVertical="3dp"/>
            <TextView
                android:textSize="@dimen/textNormal"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/click_institute"
                android:background="?attr/selectableItemBackground"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Інститут"
                android:onClick="onClickInstitute"
                android:paddingVertical="3dp"/>
            <TextView
                android:textSize="@dimen/textNormal"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/click_course"
                android:background="?attr/selectableItemBackground"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Курс"
                android:onClick="onClickCourse"
                android:paddingVertical="3dp"/>
            <TextView
                android:textSize="@dimen/textNormal"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/click_prof"
                android:background="?attr/selectableItemBackground"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Спеціальність"
                android:onClick="onClickProf"
                android:paddingVertical="3dp"/>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.button.MaterialButton
        android:textSize="10sp"
        android:layout_gravity="end"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="Див цього семестру"
        android:onClick="onClickInstituteDetails"
        android:layout_marginEnd="10dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        style="@style/Widget.Material3.Button.OutlinedButton"/>
</LinearLayout>
