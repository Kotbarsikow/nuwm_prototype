<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lastUpdate"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:cardBackgroundColor="?attr/colorBackgroundView"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorBackgroundSub"
        app:strokeWidth="1dp">
        <RelativeLayout
            android:id="@+id/current_evaluation"
            android:padding="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/chevron_right1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_chevron_right"
                app:tint="?attr/colorTint"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="18sp"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Хронологія оцінок"
                android:layout_toLeftOf="@+id/chevron_right1"/>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:textAppearance="@style/BaseTextAppearance.Roboto"
                android:textSize="14sp"
                android:textColor="?attr/colorTextSub"
                android:ellipsize="end"
                android:id="@+id/last_mark"
                android:paddingRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Остання оцінка 18.02\104 бали, Автоматизація технологічних процесів і виробництв"
                android:maxLines="2"
                android:layout_toLeftOf="@+id/chevron_right1"
                android:layout_below="@+id/text1"
                android:layout_alignLeft="@+id/text1"
                app:corners="8"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:cardBackgroundColor="?attr/colorBackgroundView"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="0dp"
        app:contentPadding="10dp"
        app:strokeColor="?attr/colorBackgroundSub"
        app:strokeWidth="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="18sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="22dp"
                android:text="Другий семестр"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/half2_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:id="@+id/error_text_2"
                android:padding="22dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Немає даних про успішність"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:cardBackgroundColor="?attr/colorBackgroundView"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorBackgroundSub"
        app:strokeWidth="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.86"
            android:paddingVertical="12dp">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="18sp"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/semestr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="22dp"
                android:text="Перший семестр"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/half1_place"
                android:paddingTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:layout_gravity="center"
                android:id="@+id/error_text_1"
                android:padding="14dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Немає даних про успішність"
                android:layout_below="@+id/semestr_name"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
