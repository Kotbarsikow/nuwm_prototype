<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_radius">
    <RelativeLayout
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:translationZ="0dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/BaseTextAppearance.Bold.Large"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/title"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ftr"
            android:translationZ="1dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/BaseTextAppearance.Bold.Large"
            android:textColor="@color/white"
            android:id="@+id/subtitle"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="8"
            android:layout_below="@+id/title"
            android:fontFamily="@font/ftr"
            android:translationZ="1dp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="13sp"
            app:autoSizeTextType="uniform"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
