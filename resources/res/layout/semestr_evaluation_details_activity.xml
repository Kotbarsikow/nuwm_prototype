<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MaterialToolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/lastUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                app:cardBackgroundColor="?attr/colorBackgroundView"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorBackgroundSub"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/current_evaluation"
                    android:padding="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Bold"
                        android:textSize="@dimen/textSmall"
                        android:textColor="?attr/colorTextTitle"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Кафедра:"
                        android:alpha="0.66"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Regular"
                        android:textSize="18sp"
                        android:textColor="?attr/colorTextMain"
                        android:id="@+id/department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Кафедра: Вищої математики"
                        android:layout_toLeftOf="@+id/chevron_right1"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Bold"
                        android:textSize="@dimen/textSmall"
                        android:textColor="?attr/colorTextTitle"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Викладач:"
                        android:alpha="0.66"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Regular"
                        android:textSize="18sp"
                        android:textColor="?attr/colorTextMain"
                        android:id="@+id/teacher_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Bold"
                        android:textSize="@dimen/textSmall"
                        android:textColor="?attr/colorTextTitle"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Дисципліна:"
                        android:alpha="0.66"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Regular"
                        android:textSize="18sp"
                        android:textColor="?attr/colorTextMain"
                        android:id="@+id/subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Bold"
                        android:textSize="@dimen/textSmall"
                        android:textColor="?attr/colorTextTitle"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Кількість годин:"
                        android:alpha="0.66"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Regular"
                        android:textSize="18sp"
                        android:textColor="?attr/colorTextMain"
                        android:id="@+id/hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Bold"
                        android:textSize="@dimen/textSmall"
                        android:textColor="?attr/colorTextTitle"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Ваша оцінка:"
                        android:alpha="0.66"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Regular"
                        android:textSize="18sp"
                        android:textColor="?attr/colorTextMain"
                        android:id="@+id/evaluation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Bold"
                        android:textSize="@dimen/textSmall"
                        android:textColor="?attr/colorTextTitle"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Оновлено:"
                        android:alpha="0.66"/>
                    <TextView
                        android:textAppearance="@style/BaseTextAppearance.Regular"
                        android:textSize="18sp"
                        android:textColor="?attr/colorTextMain"
                        android:id="@+id/updated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
