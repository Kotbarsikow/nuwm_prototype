<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lastUpdate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    app:cardBackgroundColor="?attr/colorBackgroundView"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="0dp"
    app:strokeColor="?attr/colorBackgroundSub"
    app:strokeWidth="1dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/current_evaluation"
        android:padding="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular"
            android:textSize="18sp"
            android:textColor="?attr/colorTextMain"
            android:id="@+id/semestr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TableLayout
            android:background="@drawable/rectangle_corner"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:stretchColumns="*"
            android:alpha="0.86"
            android:backgroundTint="?attr/colorBackgroundSub"
            android:paddingHorizontal="3dp"
            android:paddingVertical="3dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textSmall"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:background="?attr/colorBackgroundSub"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="M1"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textSmall"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:background="?attr/colorBackgroundView"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ПтК"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textSmall"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:background="?attr/colorBackgroundSub"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ПРЗ"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textSmall"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:background="?attr/colorBackgroundView"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Екз"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textSmall"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:background="?attr/colorBackgroundSub"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="КОМ"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textSmall"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:background="?attr/colorBackgroundView"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Бал"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textSmall"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:background="?attr/colorBackgroundSub"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ECTS"
                    android:paddingVertical="12dp"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textSmall"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:background="?attr/colorBackgroundView"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4-б"
                    android:paddingVertical="12dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textLarge"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:id="@+id/text1"
                    android:background="?attr/colorBackgroundSub"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textLarge"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:id="@+id/text2"
                    android:background="?attr/colorBackgroundView"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textLarge"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:id="@+id/text3"
                    android:background="?attr/colorBackgroundSub"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textLarge"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:id="@+id/text4"
                    android:background="?attr/colorBackgroundView"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textLarge"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:id="@+id/text5"
                    android:background="?attr/colorBackgroundSub"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textLarge"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:id="@+id/text6"
                    android:background="?attr/colorBackgroundView"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textLarge"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:id="@+id/text7"
                    android:background="?attr/colorBackgroundSub"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="@dimen/textLarge"
                    android:textColor="?attr/colorTextTitle"
                    android:gravity="center"
                    android:id="@+id/text8"
                    android:background="?attr/colorBackgroundView"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
