<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/content_scrollable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/email_layout"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/horizontal_margin_large"
            android:paddingTop="6dp"
            android:paddingRight="@dimen/horizontal_margin_large"
            android:paddingBottom="6dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/horizontal_margin_large"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:paddingHorizontal="@dimen/horizontal_margin_large"
            android:paddingVertical="6dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/image"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp">
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Regular.Medium"
                    android:textSize="16sp"
                    android:textColor="?attr/colorTextMain"
                    android:ellipsize="end"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Roboto"
                    android:textSize="12sp"
                    android:textColor="?attr/colorTextSub"
                    android:ellipsize="end"
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Електронна пошта"
                    android:maxLines="2"
                    android:layout_below="@+id/email"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_outline_email"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="?attr/colorBackgroundSub"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:alpha="0.66"/>
            <RelativeLayout
                android:id="@+id/mapsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/BaseTextAppearance.Bold"
                    android:textSize="18sp"
                    android:textColor="?attr/colorTextTitle"
                    android:id="@+id/mapTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_margin_large"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="@dimen/horizontal_margin_large"
                    android:layout_marginBottom="14dp"
                    android:text="Карта"
                    android:layout_marginHorizontal="@dimen/horizontal_margin_large"
                    android:layout_marginVertical="14dp"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:layout_gravity="end"
                    android:id="@+id/switch3D"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="3D"
                    android:layout_alignTop="@+id/mapTitle"
                    android:layout_alignParentEnd="true"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>
                <com.m_myr.nuwm.nuwmschedule.ui.view.NestedScrollWebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_below="@+id/mapTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/openIcon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_baseline_fullscreen"
                    android:layout_alignBottom="@+id/webview"
                    android:onClick="openFullScreen"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/profile_item_timetable"/>
        <include layout="@layout/profile_item_biography"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/cards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="?attr/colorBackgroundSub"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:alpha="0.66"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Bold"
            android:textSize="18sp"
            android:textColor="?attr/colorTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_large"
            android:layout_marginTop="14dp"
            android:layout_marginRight="@dimen/horizontal_margin_large"
            android:layout_marginBottom="4dp"
            android:text="Пов&apos;язані місця"
            android:layout_marginHorizontal="@dimen/horizontal_margin_large"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/departments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
