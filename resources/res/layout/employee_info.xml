<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    app:cardBackgroundColor="?attr/colorBackgroundView"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="0dp"
    app:contentPadding="0dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular"
            android:textSize="18sp"
            android:textColor="?attr/colorTextMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="Сервіси для персоналу"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular.Small"
            android:textSize="14sp"
            android:textColor="?attr/colorTextSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="16dp"
            android:text="Інформація про вас та взаємодія з університетом"/>
        <RelativeLayout
            android:id="@+id/finance"
            android:background="?attr/selectableItemBackground"
            android:padding="16dp"
            android:paddingTop="10dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.43">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_dollar"/>
            <ImageView
                android:id="@+id/chevron_right1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_chevron_right"
                app:tint="?attr/colorTint"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="16sp"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Фінансова інформація"
                android:layout_toLeftOf="@+id/chevron_right1"
                android:layout_toRightOf="@+id/image1"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Roboto"
                android:textSize="14sp"
                android:textColor="?attr/colorTextSub"
                android:ellipsize="end"
                android:id="@+id/last_mark"
                android:paddingRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Бухгалтерські виписки та замовлення довідки"
                android:maxLines="2"
                android:layout_toLeftOf="@+id/chevron_right1"
                android:layout_below="@+id/text1"
                android:layout_alignLeft="@+id/text1"/>
        </RelativeLayout>
        <View
            android:background="?attr/colorOutline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:alpha="0.86"/>
        <RelativeLayout
            android:id="@+id/administration"
            android:background="?attr/selectableItemBackground"
            android:padding="16dp"
            android:paddingTop="8dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.43">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_folder"/>
            <ImageView
                android:id="@+id/chevron_right2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_chevron_right"
                app:tint="?attr/colorTint"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="16sp"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Адміністративна інформація"
                android:layout_toLeftOf="@+id/chevron_right2"
                android:layout_toRightOf="@+id/image2"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Roboto"
                android:textSize="14sp"
                android:textColor="?attr/colorTextSub"
                android:ellipsize="end"
                android:id="@+id/avg_mark"
                android:paddingRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Укладені договори, накази, відпустка"
                android:maxLines="2"
                android:layout_toLeftOf="@+id/chevron_right2"
                android:layout_below="@+id/text2"
                android:layout_alignLeft="@+id/text2"/>
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
