<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    app:cardBackgroundColor="?attr/colorBackgroundView"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="0dp"
    app:contentPadding="2dp"
    app:strokeColor="?attr/colorBackgroundSub"
    app:strokeWidth="1dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginVertical="12dp">
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="13sp"
            android:textColor="@color/grey_600"
            android:layout_gravity="center_horizontal"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:00"/>
        <RelativeLayout
            android:paddingTop="12dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="12dp">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="17sp"
                android:textColor="?attr/colorTextTitle"
                android:gravity="center_vertical"
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/basefont_semibold"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/status_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_below="@+id/topic"
                android:layout_marginVertical="6dp">
                <com.google.android.material.chip.Chip
                    android:textSize="10sp"
                    android:textColor="@color/red_800"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="#ffcccb"
                    app:chipMinHeight="18dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:textEndPadding="4sp"
                    app:textStartPadding="5sp"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="13sp"
                    android:textColor="@color/grey_850"
                    android:gravity="center_vertical"
                    android:id="@+id/title"
                    android:paddingLeft="6dp"
                    android:paddingBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="14sp"
                android:textColor="@color/googleDark"
                android:id="@+id/message"
                android:paddingBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_row"
                android:textIsSelectable="true"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/attachmentsCard"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/attachments_file"
                android:paddingBottom="8dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="?attr/colorBackgroundAccent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/grey_850"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:text="Вкладення:"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
