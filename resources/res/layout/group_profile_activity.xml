<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/content_scrollable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold.Large"
        android:id="@+id/prof_shirt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Regular"
        android:id="@+id/faculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginBottom="3dp"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"
        android:layout_marginVertical="3dp"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Regular.Small"
        android:textSize="14sp"
        android:textColor="?attr/colorTextSub"
        android:id="@+id/students_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginBottom="3dp"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"
        android:layout_marginVertical="3dp"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textColor="?attr/colorAccent"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Переглянути список студентів"
        android:onClick="onClickShowStudents"/>
    <include layout="@layout/profile_item_timetable"/>
</LinearLayout>
