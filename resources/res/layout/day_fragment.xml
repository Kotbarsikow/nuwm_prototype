<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/smile"
        android:padding="12dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="20sp"
        android:layout_gravity="center"
        android:id="@+id/empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цього дня немає занять"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/smile"
        app:layout_constraintStart_toStartOf="@+id/smile"
        app:layout_constraintTop_toBottomOf="@+id/smile"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/empty_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="smile,empty_text"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timatable_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timatable_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>
