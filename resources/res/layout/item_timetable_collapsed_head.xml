<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:textColor="?attr/colorTextTitle"
            android:id="@+id/str_time_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="13:00"
            android:singleLine="true"/>
    </FrameLayout>
    <com.m_myr.nuwm.nuwmschedule.ui.view.DividerVerticalView
        android:id="@+id/divider"
        android:layout_width="2.2dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="2dp"
        app:colorIndicator="#ff1a73e8"/>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginHorizontal="8dp">
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ff1a73e8"
            android:id="@+id/str_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:drawableTint="#ff1a73e8"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Header"
            android:textSize="18sp"
            android:textColor="?attr/colorTextTitle"
            android:ellipsize="end"
            android:id="@+id/str_subject"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular.Small"
            android:textSize="14sp"
            android:textColor="?attr/colorTextMain"
            android:gravity="center_vertical"
            android:id="@+id/str_room"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:drawablePadding="5dp"
            android:drawableTint="?attr/colorTint"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular.Small"
            android:textSize="14sp"
            android:textColor="?attr/colorTextSub"
            android:id="@+id/str_comp"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/task_layout"
            android:paddingTop="2dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center_vertical"
                android:id="@+id/task_icon"
                android:background="@drawable/circle"
                android:layout_width="12dp"
                android:layout_height="12dp"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular.Small"
                android:textSize="12sp"
                android:textColor="?attr/colorTextMain"
                android:ellipsize="end"
                android:id="@+id/str_task"
                android:paddingLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
