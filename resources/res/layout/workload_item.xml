<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="?android:attr/listPreferredItemPaddingStart"
    android:paddingRight="2dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="16sp"
        android:textColor="?attr/colorTextMain"
        android:gravity="center_vertical"
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_vertical_margin"
        android:text="Обробка зображень та мультимедіа"/>
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="13sp"
        android:textStyle="italic"
        android:textColor="@color/grey_500"
        android:gravity="center_vertical"
        android:id="@+id/text2"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Денна, ІНФ-31"/>
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="13sp"
        android:textColor="@color/grey_500"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_vertical_margin"
        android:text="Всього 20 годин"/>
    <View
        android:id="@+id/divider"
        android:background="?attr/colorBackgroundSub"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"/>
</LinearLayout>
