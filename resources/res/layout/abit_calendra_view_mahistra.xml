<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/abit_calendar_item1"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorfilling">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Прийом заяв та документів"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 - 26 липня"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/abit_calendar_item2"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorfilling">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Проведення вступних випробувань"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26 липня - 03 серпня"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/abit_calendar_item3"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorfilling"/>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/abit_calendar_item4"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorfilling"/>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/abit_calendar_item5"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorfilling"/>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/abit_calendar_item6"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorfilling">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Оприлюднення рейтингового списку"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03 серпня"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/abit_calendar_item7"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorfilling">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Виконання абітурієнтами вимог до зарахування"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 серпня - на місця державного замовлення - до 18.00 год.\1010 серпня - за кошти фізичних та юридичних осіб - не пізніше 18.00 години"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/abit_calendar_item8"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorfilling">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Зарахування вступників"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 серпня - за державним замовленням\1030 вересня - за кошти фізичних та юридичних осіб"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
