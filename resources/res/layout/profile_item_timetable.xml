<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/schedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="?attr/colorBackgroundSub"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:alpha="0.66"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textSize="18sp"
        android:textColor="?attr/colorTextTitle"
        android:id="@+id/timetableName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="14dp"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginBottom="14dp"
        android:text="Розклад"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"
        android:layout_marginVertical="14dp"/>
    <ProgressBar
        android:id="@+id/progress_timetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"/>
    <RelativeLayout
        android:id="@+id/empty_timetable"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.6">
        <ImageView
            android:id="@+id/sch_icon"
            android:padding="4dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_insert_invitation_black_24dp"
            app:tint="?attr/colorTint"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сьогодні немає занять"
            android:layout_below="@+id/sch_icon"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textColor="?attr/colorAccent"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Переглянути весь розклад"
        android:onClick="onClickAllTimetable"/>
</LinearLayout>
