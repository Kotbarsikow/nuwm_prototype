<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/content_scrollable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/baswfref"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/BaseTextAppearance.Title"
            android:textSize="22sp"
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="0.8"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/photo"
            app:layout_constraintTop_toTopOf="@+id/photo"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular.Small"
            android:textSize="14sp"
            android:textColor="?attr/colorTextSub"
            android:id="@+id/degree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/email_layout"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/horizontal_margin_large"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/horizontal_margin_large"
        android:paddingBottom="6dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin_medium"
        android:paddingHorizontal="@dimen/horizontal_margin_large"
        android:paddingVertical="6dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/image"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular.Medium"
                android:textSize="16sp"
                android:textColor="?attr/colorTextMain"
                android:ellipsize="end"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Roboto"
                android:textSize="12sp"
                android:textColor="?attr/colorTextSub"
                android:ellipsize="end"
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Електронна пошта"
                android:maxLines="2"
                android:layout_below="@+id/email"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_outline_email"/>
    </RelativeLayout>
    <include layout="@layout/profile_item_timetable"/>
    <include layout="@layout/profile_item_biography"/>
    <include layout="@layout/profile_item_repository"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cards_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="?attr/colorBackgroundSub"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:alpha="0.66"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textSize="18sp"
        android:textColor="?attr/colorTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="14dp"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginBottom="4dp"
        android:text="Пов&apos;язані підрозділи "
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
