<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/content_scrollable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/BaseTextAppearance.Title"
            android:textSize="20sp"
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="0.8"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/photo"
            app:layout_constraintTop_toTopOf="@+id/photo"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular.Small"
            android:textSize="14sp"
            android:textColor="?attr/colorTextSub"
            android:id="@+id/parent"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClickParent"
            android:layout_marginEnd="16dp"
            android:paddingVertical="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"/>
        <RelativeLayout
            android:id="@+id/relativeLayoutLocation"
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="64dp"
            app:layout_constraintTop_toBottomOf="@+id/parent">
            <ImageView
                android:id="@+id/image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/horizontal_margin_large"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_room"
                app:tint="?attr/colorTint"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular.Medium"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:ellipsize="end"
                android:id="@+id/location"
                android:paddingTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_margin_large"
                android:layout_marginRight="@dimen/horizontal_margin_large"
                android:maxLines="2"
                android:layout_toEndOf="@+id/image"
                android:layout_marginHorizontal="@dimen/horizontal_margin_large"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Roboto"
                android:textSize="12sp"
                android:textColor="?attr/colorTextSub"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Адреса"
                android:singleLine="true"
                android:layout_below="@+id/location"
                android:layout_alignLeft="@+id/location"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayoutPhone"
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayoutLocation">
            <ImageView
                android:id="@+id/imagephone"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/horizontal_margin_large"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_outline_local_phone"
                app:tint="?attr/colorTint"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular.Medium"
                android:textSize="15sp"
                android:textColor="?attr/colorTextMain"
                android:ellipsize="end"
                android:id="@+id/phone"
                android:paddingTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_margin_large"
                android:layout_marginRight="@dimen/horizontal_margin_large"
                android:maxLines="2"
                android:layout_toEndOf="@+id/imagephone"
                android:layout_marginHorizontal="@dimen/horizontal_margin_large"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Roboto"
                android:textSize="12sp"
                android:textColor="?attr/colorTextSub"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон"
                android:singleLine="true"
                android:layout_below="@+id/phone"
                android:layout_alignLeft="@+id/phone"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include layout="@layout/profile_item_biography"/>
    <include layout="@layout/profile_item_news"/>
    <View
        android:background="?attr/colorBackgroundSub"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:alpha="0.66"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textSize="18sp"
        android:textColor="?attr/colorTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="14dp"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginBottom="14dp"
        android:text="Склад підрозділу"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"
        android:layout_marginVertical="14dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="vertical"
        android:id="@+id/workers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cards_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
