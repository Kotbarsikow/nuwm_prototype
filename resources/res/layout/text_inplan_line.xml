<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorBackgroundView"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="0dp"
    app:contentPadding="9dp"
    app:strokeColor="?attr/colorBackgroundSub"
    app:strokeWidth="1dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Bold.Large"
            android:textSize="@dimen/textVeryLarge"
            android:textColor="?attr/colorTextMain"
            android:id="@+id/main_text"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="@dimen/text_normal"
            android:textStyle="italic|bold"
            android:textColor="?attr/colorTextMain"
            android:id="@+id/sub_text"
            android:paddingLeft="3dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="@dimen/textSmall"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/text1"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.84"/>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="@dimen/textSmall"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/text2"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.84"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="@dimen/textSmall"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/text3"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.84"/>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="@dimen/textSmall"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/text4"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.84"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="@dimen/textSmall"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/text6"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.84"/>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="@dimen/textSmall"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/text5"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.84"/>
        </LinearLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="@dimen/textLarge"
            android:textColor="?attr/colorTextMain"
            android:id="@+id/text7"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.88"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="?attr/colorTextMain"
                android:paddingLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Викладач:  "
                android:alpha="0.9"/>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="italic"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/other_text"
                android:paddingRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.74"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
