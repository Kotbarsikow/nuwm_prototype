<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="?attr/colorBackgroundSub"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:alpha="0.66"/>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textSize="18sp"
        android:textColor="?attr/colorTextTitle"
        android:id="@+id/newsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="14dp"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginBottom="14dp"
        android:text="Новини та оголошення"
        android:layout_marginHorizontal="@dimen/horizontal_margin_large"
        android:layout_marginVertical="14dp"/>
    <FrameLayout
        android:textSize="14sp"
        android:textColor="?attr/colorTextMain"
        android:ellipsize="end"
        android:id="@+id/newsPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:lineSpacingMultiplier="1.12"
        android:alpha="0.8">
        <ProgressBar
            android:id="@+id/progressNews"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="true"
            android:paddingHorizontal="18dp"
            style="?android:attr/progressBarStyleHorizontal"/>
    </FrameLayout>
    <TextView
        android:textAppearance="@style/BaseTextAppearance.Bold"
        android:textColor="?attr/colorAccent"
        android:gravity="center"
        android:id="@+id/readAllNews"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Читати все"/>
</LinearLayout>
