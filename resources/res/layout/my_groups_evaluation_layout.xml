<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:cardBackgroundColor="?attr/colorBackgroundView"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorBackgroundSub"
        app:strokeWidth="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.86"
            android:paddingVertical="12dp">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="18sp"
                android:textColor="?attr/colorTextMain"
                android:id="@+id/semestr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="22dp"
                android:text="Перший семестр"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/half1_place"
                android:paddingTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:layout_gravity="center"
                android:id="@+id/error_text_1"
                android:padding="14dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Немає даних про успішність"
                android:layout_below="@+id/semestr_name"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:cardBackgroundColor="?attr/colorBackgroundView"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="0dp"
        app:contentPadding="10dp"
        app:strokeColor="?attr/colorBackgroundSub"
        app:strokeWidth="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:textSize="18sp"
                android:textColor="?attr/colorTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="22dp"
                android:text="Другий семестр"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/half2_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular"
                android:id="@+id/error_text_2"
                android:padding="22dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Немає даних про успішність"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
