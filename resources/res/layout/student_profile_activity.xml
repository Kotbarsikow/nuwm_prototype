<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/content_scrollable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/baswfref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/BaseTextAppearance.Title"
            android:textSize="22sp"
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="0.8"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/photo"
            app:layout_constraintTop_toTopOf="@+id/photo"/>
        <TextView
            android:textAppearance="@style/BaseTextAppearance.Regular.Small.Sub"
            android:textSize="14sp"
            android:id="@+id/group_name_full"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="onClickGroup"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/email_layout"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/horizontal_margin_large"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/horizontal_margin_large"
        android:paddingBottom="6dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/horizontal_margin_large"
        android:paddingHorizontal="@dimen/horizontal_margin_large"
        android:paddingVertical="6dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/image"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular.Medium"
                android:textSize="16sp"
                android:textColor="?attr/colorTextMain"
                android:ellipsize="end"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Roboto"
                android:textSize="12sp"
                android:textColor="?attr/colorTextSub"
                android:ellipsize="end"
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Електронна пошта"
                android:maxLines="2"
                android:layout_below="@+id/email"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_outline_email"
            app:tint="?attr/colorTint"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/group_layout"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/horizontal_margin_large"
        android:paddingRight="@dimen/horizontal_margin_large"
        android:paddingBottom="6dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onClickGroup"
        android:paddingHorizontal="@dimen/horizontal_margin_large">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/image2"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular.Medium"
                android:textSize="16sp"
                android:textColor="?attr/colorTextMain"
                android:ellipsize="end"
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Roboto"
                android:textSize="12sp"
                android:textColor="?attr/colorTextSub"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Група"
                android:maxLines="2"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image2"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_group"
            app:tint="?attr/colorTint"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/prof_shirt_layout"
        android:paddingLeft="@dimen/horizontal_margin_large"
        android:paddingRight="@dimen/horizontal_margin_large"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:paddingHorizontal="@dimen/horizontal_margin_large">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/image3"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Regular.Medium"
                android:textSize="16sp"
                android:textColor="?attr/colorTextMain"
                android:ellipsize="end"
                android:id="@+id/prof_shirt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_centerVertical="true"/>
            <TextView
                android:textAppearance="@style/BaseTextAppearance.Roboto"
                android:textSize="12sp"
                android:textColor="?attr/colorTextSub"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Освітня програма"
                android:maxLines="2"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image3"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_profession"
            app:tint="?attr/colorTint"/>
    </RelativeLayout>
    <include layout="@layout/profile_item_timetable"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cards_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
